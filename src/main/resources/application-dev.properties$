# Configuration de la base de données en mode Développement
spring.datasource.url=jdbc:mysql://localhost:3306/fastcar_db?useSSL=false&serverTimezone=UTC
spring.datasource.username=root 
spring.datasource.password=  # Laissez vide si vous n'avez pas de mot de passe

# Hibernate DDL (Data Definition Language)
# 'update' permet à Spring de créer/mettre à jour automatiquement les tables dans la DB
spring.jpa.hibernate.ddl-auto=update